#!/usr/bin/perl

#GERA UM FICHEIRO COM PESOS OU FREQS  NORMALIZADOS
#lê UM ficheiros:
#1. um ficheiro de freqs: "cntx pal freq" (pipe)


##uso da formula z = (x - min_x) / (max_x - min_x)

 
$tmp="";
while ($line = <>) {
      chop($line);
      ($tmp, $obj, $peso) = split(" ", $line);

      $Dico{$obj} = $peso;
      
      if ($peso >= $Max) {
        $Max = $peso;
      }
      if ($peso <= $Min) {
        $Min = $peso;
      }

     printf STDERR "<%7d>\r",$cont if ($cont++ % 2500 == 0);

}



foreach $o (keys %Dico) {
        $peso = $Dico{$o} ;
      
       $z = ($peso - $Min) / ($Max - $Min) ;
       if ($z > 0) {
         printf "%.4f %s\n",  $z, $o;
       }
  
}
